#!/bin/sh
export NVM_DIR="/home/eruizdechavez/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

npm install

forever stop "chilangobot"

export HUBOT_LOG_LEVEL=debug

forever start -a --uid "chilangobot" \
  -c node_modules/hubot/node_modules/.bin/coffee node_modules/.bin/hubot \
  --disable-httpd \
  --adapter slack \
  --name "ChilangoBot"
